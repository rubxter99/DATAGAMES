<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:foregroundTint="#121010"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="290dp"
            android:layout_height="125dp"

            android:src="@drawable/tetris" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_above="@id/app_name"
            android:layout_marginBottom="2dp"
            android:src="@drawable/icon_game" />


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu_slogan"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Search Your Game"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/menu_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="Since 2020"
            android:textColor="@color/colorBlack" />


    </LinearLayout>


</LinearLayout>
